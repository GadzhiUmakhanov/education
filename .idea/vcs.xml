num_init = int(input("Введите целое положительное число: "))
max_num = 0
num = num_init
while num > 0:
    digit = num % 10
    if digit > max_num:
        max_num = digit
        if max_num == 9:
            break
    num = num // 10
print(f"Максимальная цифра в числе {num_init} - {max_num}")

